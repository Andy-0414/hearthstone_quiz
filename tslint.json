{
  "defaultSeverity": "off",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "max-classes-per-file": [
      true,
      5,
      "exclude-class-expressions"
    ]
  }
}